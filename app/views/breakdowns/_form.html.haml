= form_for @breakdown do |f|
  - if @breakdown.errors.any?
    #error_explanation
      %h2= "#{pluralize(@breakdown.errors.count, "error")} prohibited this breakdown from being saved:"
      %ul
        - @breakdown.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :category_id
    = f.select :category_id, Category.all.map {|c| [c.name, c.id]}
  .actions
    = f.submit
