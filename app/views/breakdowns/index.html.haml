.panel.panel-default
  .panel-heading= page_title
  .panel-body
    = form_for @breakdown, remote: true do |f| 
      .form-group
        = f.label :category_id
        = f.select :category_id, Category.all.map {|c| [c.name, c.id]}, {}, { class: "non-block-form-control" }
      .form-group
        = f.label :name
        = f.text_field :name, placeholder: I18n.t("example.breakdown"), class: "non-block-form-control"
    %table.table.breakdown
      %tr
        %th= Breakdown.human_attribute_name(:category_id)
        %th= Breakdown.human_attribute_name(:name)
        %td= I18n.t("labels.edit")
        %td.trash-icon= I18n.t("labels.delete")
      = render partial: @breakdowns
