%tr
  %td= breakdown.category.name
  %td= breakdown.name
  %td.edit-icon= link_to content_tag(:span, "", class: "glyphicon glyphicon-edit"), edit_breakdown_path(id: breakdown.id)
  %td.trash-icon= link_to content_tag(:span, "", class: "glyphicon glyphicon-trash"), breakdown, method: :delete, data: { confirm: 'Are you sure?' }
