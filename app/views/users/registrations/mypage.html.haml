.panel.panel-default
  .panel-heading
    %span.glyphicon.glyphicon-user
    = page_title
  .panel-body
    %dl.dl-horizontal
      %dt= User.human_attribute_name(:email)
      %dd= resource.email
    - if resource.unconfirmed_email.present?
      %dl.dl-horizontal
        %dt
        %dd
          = I18n.t("labels.unconfirmed_email") + I18n.t("code.colon")
          = resource.unconfirmed_email
    %dl.dl-horizontal
      %dt= User.human_attribute_name(:password)
      %dd= I18n.t("labels.comments")
    .align-right
      = link_to I18n.t("links.edit_user"), edit_user_registration_path, class: "btn btn-info"
      = link_to I18n.t("links.cancel_user"), cancel_user_registration_path, class: "btn btn-info"
    %hr
    %dl.dl-horizontal
      %dt= I18n.t("labels.number_of_registered_records")
      %dd= current_user.records.count
