= form_for @category do |f|
  - if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :barance_of_payments, class: "control-label"
    .btn-group{"data-toggle" => "buttons"}
      %label.btn.btn-defaults
        = f.radio_button :barance_of_payments, 0, class: "form-control"
        = I18n.t("category.outgo")
      %label.btn.btn-defaults
        = f.radio_button :barance_of_payments, 1, class: "form-control"
        = I18n.t("category.income")
  .form-group
    = f.label :name, class: "control-label"
    = f.text_field :name, class: "form-control"
  .actions
    = f.submit class: "btn btn-defaults"
