%ul.list-group
  %li.list-group-item= link_to I18n.t("menu.new_record"), new_record_path
%ul.list-group
  %li.list-group-item= link_to I18n.t("menu.category"), categories_path
  %li.list-group-item= link_to I18n.t("menu.breakdown"), breakdowns_path
  %li.list-group-item= link_to I18n.t("menu.record"), records_path

- if @years
  %ul.nav.nav-pills
    - @years.each do |key, value|
      %li= link_to key.to_s + I18n.t("date.year"), records_path(year: key)
  %ul.nav.nav-pills
    %li= link_to I18n.t("date.last_month"), records_path(year: (@current_day-1.month).year, month: (@current_day-1.month).month)
    %li= link_to I18n.t("date.current_month"), records_path(year: @current_day.year, month: @current_day.month)
