- if alert or (target and target.errors.any?)
  .alert.alert-danger(role='alert')
    %button.close(data-dismiss='alert' type='button')
      %span(aria-hidden='true')= t("links.cross_mark")
      %span.sr-only= "Close"
    = alert if alert
- elsif notice
  .alert.alert-success(role='alert')
    %button.close(data-dismiss='alert' type='button')
      %span(aria-hidden='true')= t("links.cross_mark")
      %span.sr-only= "Close"
    = notice if notice
