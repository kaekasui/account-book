.panel.panel-default
  .panel-heading
    %span.glyphicon.glyphicon-import
    = page_title
  .panel-body
    - if @error_messages
      %ul
      - @error_messages.each do |msg|
        %li= msg
    = form_tag csv_import_path, multipart: true, html: { role: "form", class: "form-horizontal" } do |f|
      .form-group
        = label_tag :csv_file, I18n.t("labels.csv_file"), class: "form-label col-sm-2"
        .col-sm-10
          = file_field_tag :csv_file
      .form-group
        .col-sm-2
        .col-sm-10
          = submit_tag I18n.t("buttons.import"), class: "btn btn-default"
